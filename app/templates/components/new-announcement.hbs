{{#if addNewAnnouncement}}
<h3>Add an Announcement</h3>
<form>
  <div class="form-group">
    <label for="header">Header</label>
    {{input value=header id="header"}}
  </div>
  <div class="form-group">
    <label for="admin">Admin</label>
    {{input value=admin id="admin"}}
  </div>
  <div class="form-group">
    <label for="message">Message</label>
    {{textarea value=message id="message"}}
  </div>
  <button  {{action 'saveAnnouncement1'}}name="button">Submit</button>

</form>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
